"use client";

import { useState, useEffect } from "react";
import { Navigation } from "@/components/navigation";
import { useRouter } from "next/navigation";
import { ConfirmationModal } from "@/components/confirmation-modal";
import { mockUsers, type User } from "@/lib/mock/users-mock";

export default function AdminManagementPage() {
  const router = useRouter();
  const [userRole, setUserRole] = useState<string>("");
  const [currentWarehouseId, setCurrentWarehouseId] = useState<string | null>(null);
  const [users, setUsers] = useState<User[]>([]);
  
  // Modal states
  const [showAddModal, setShowAddModal] = useState(false);
  const [showEditModal, setShowEditModal] = useState(false);
  const [selectedUser, setSelectedUser] = useState<User | null>(null);
  
  // Confirmation modal states
  const [confirmModal, setConfirmModal] = useState({
    isOpen: false,
    type: "confirm" as "confirm" | "alert" | "success" | "error",
    title: "",
    message: "",
    onConfirm: () => {},
  });
 
  // Form states
  const [formData, setFormData] = useState({
    username: "",
    full_name: "",
    email: "",
    phone: "",
    password: "",
    role: "admin_warehouse" as "developer" | "admin_cabang" | "admin_warehouse",
    warehouse_id: "wh-001-cikarang",
  });

  // Load user role and check access
  useEffect(() => {
    const userStr = localStorage.getItem("user");
    if (userStr) {
      const user = JSON.parse(userStr);
      setUserRole(user.role);
      setCurrentWarehouseId(user.warehouseId || null);
     
      // Only developer and admin_cabang can access this page
      if (user.role !== "developer" && user.role !== "admin_cabang") {
        router.push("/");
      }
    } else {
      router.push("/login");
    }
  }, [router]);

  // Load users from localStorage (dengan fallback ke mockUsers)
  useEffect(() => {
    if (!userRole) return;

    const storedUsers = localStorage.getItem("users_data");
    let allUsers: User[] = [];

    if (storedUsers) {
      allUsers = JSON.parse(storedUsers);
    } else {
      // Initialize with mock data
      allUsers = [...mockUsers];
      localStorage.setItem("users_data", JSON.stringify(allUsers));
    }
      
    // Filter based on role
    if (userRole === "admin_cabang" && currentWarehouseId) {
      // Admin cabang only sees admin_warehouse in their warehouse
      const filtered = allUsers.filter(
        (user: User) => user.role === "admin_warehouse" && user.warehouse_id === currentWarehouseId
      );
      setUsers(filtered);
    } else if (userRole === "developer") {
      // Developer sees all users
      setUsers(allUsers);
    }
  }, [userRole, currentWarehouseId]);

  const resetForm = () => {
    setFormData({
      username: "",
      full_name: "",
      email: "",
      phone: "",
      password: "",
      role: "admin_warehouse",
      warehouse_id: currentWarehouseId || "wh-001-cikarang",
    });
    setSelectedUser(null);
  };

  const handleAddUser = () => {
    if (!formData.username || !formData.full_name || !formData.email || !formData.password) {
      setConfirmModal({
        isOpen: true,
        type: "error",
        title: "Validasi Gagal",
        message: "Username, Nama Lengkap, Email, dan Password harus diisi!",
        onConfirm: () => {},
      });
      return;
    }

    // Get all users from localStorage
    const allUsers = JSON.parse(localStorage.getItem("users_data") || "[]");

    // Check if username already exists
    if (allUsers.some((user: User) => user.username === formData.username)) {
      setConfirmModal({
        isOpen: true,
        type: "error",
        title: "Username Sudah Ada",
        message: "Username sudah digunakan! Silakan gunakan username lain.",
        onConfirm: () => {},
      });
      return;
    }

    // Validate role permissions
    if (userRole === "admin_cabang") {
      // Admin cabang can only create admin_warehouse in their warehouse
      if (formData.role !== "admin_warehouse") {
        setConfirmModal({
          isOpen: true,
          type: "error",
          title: "Akses Ditolak",
          message: "Anda hanya bisa menambah Admin Warehouse!",
          onConfirm: () => {},
        });
        return;
      }
      if (formData.warehouse_id !== currentWarehouseId) {
        setConfirmModal({
          isOpen: true,
          type: "error",
          title: "Akses Ditolak",
          message: "Anda hanya bisa menambah admin untuk gudang Anda sendiri!",
          onConfirm: () => {},
        });
        return;
      }
    }

    const warehouseName = formData.warehouse_id === "wh-001-cikarang" ? "Cikarang" : 
                         formData.warehouse_id === "wh-002-bandung" ? "Bandung" : "Semua Gudang";

    const newUser: User = {
      id: `usr-${String(allUsers.length + 1).padStart(3, '0')}`,
      username: formData.username,
      password: formData.password,
      full_name: formData.full_name,
      role: formData.role,
      email: formData.email,
      phone: formData.phone,
      warehouse_id: formData.role === "developer" ? null : formData.warehouse_id,
      warehouse_name: formData.role === "developer" ? "Semua Gudang" : warehouseName,
      is_active: true,
      last_login: null,
      created_at: new Date().toISOString(),
      updated_at: new Date().toISOString(),
    };

    const updatedUsers = [...allUsers, newUser];
    localStorage.setItem("users_data", JSON.stringify(updatedUsers));

    // Update displayed users based on role
    if (userRole === "admin_cabang" && currentWarehouseId) {
      const filtered = updatedUsers.filter(
        (user: User) => user.role === "admin_warehouse" && user.warehouse_id === currentWarehouseId
      );
      setUsers(filtered);
    } else {
      setUsers(updatedUsers);
    }

    // Reset form and close modal
    resetForm();
    setShowAddModal(false);
    
    setConfirmModal({
      isOpen: true,
      type: "success",
      title: "Berhasil!",
      message: `User ${formData.full_name} berhasil ditambahkan.`,
      onConfirm: () => {},
    });
  };

  const handleEditUser = () => {
    if (!selectedUser) return;

    if (!formData.username || !formData.full_name || !formData.email) {
      setConfirmModal({
        isOpen: true,
        type: "error",
        title: "Validasi Gagal",
        message: "Username, Nama Lengkap, dan Email harus diisi!",
        onConfirm: () => {},
      });
      return;
    }

    // Get all users from localStorage
    const allUsers = JSON.parse(localStorage.getItem("users_data") || "[]");

    // Check if username already exists (except current user)
    if (allUsers.some((user: User) => user.username === formData.username && user.id !== selectedUser.id)) {
      setConfirmModal({
        isOpen: true,
        type: "error",
        title: "Username Sudah Ada",
        message: "Username sudah digunakan! Silakan gunakan username lain.",
        onConfirm: () => {},
      });
      return;
    }

    // Validate role permissions
    if (userRole === "admin_cabang") {
      if (formData.role !== "admin_warehouse") {
        setConfirmModal({
          isOpen: true,
          type: "error",
          title: "Akses Ditolak",
          message: "Anda hanya bisa edit Admin Warehouse!",
          onConfirm: () => {},
        });
        return;
      }
    }

    const warehouseName = formData.warehouse_id === "wh-001-cikarang" ? "Cikarang" : 
                         formData.warehouse_id === "wh-002-bandung" ? "Bandung" : "Semua Gudang";

    const updatedUser: User = {
      ...selectedUser,
      username: formData.username,
      password: formData.password || selectedUser.password, // Keep old password if not changed
      full_name: formData.full_name,
      role: formData.role,
      email: formData.email,
      phone: formData.phone,
      warehouse_id: formData.role === "developer" ? null : formData.warehouse_id,
      warehouse_name: formData.role === "developer" ? "Semua Gudang" : warehouseName,
      updated_at: new Date().toISOString(),
    };

    const updatedUsers = allUsers.map((user: User) =>
      user.id === selectedUser.id ? updatedUser : user
    );
    localStorage.setItem("users_data", JSON.stringify(updatedUsers));

    // Update displayed users based on role
    if (userRole === "admin_cabang" && currentWarehouseId) {
      const filtered = updatedUsers.filter(
        (user: User) => user.role === "admin_warehouse" && user.warehouse_id === currentWarehouseId
      );
      setUsers(filtered);
    } else {
      setUsers(updatedUsers);
    }

    // Reset form and close modal
    resetForm();
    setShowEditModal(false);
    
    setConfirmModal({
      isOpen: true,
      type: "success",
      title: "Berhasil!",
      message: `Data user ${formData.full_name} berhasil diupdate.`,
      onConfirm: () => {},
    });
  };

  const handleToggleStatus = (user: User) => {
    const allUsers = JSON.parse(localStorage.getItem("users_data") || "[]");
    const updatedUsers = allUsers.map((u: User) =>
      u.id === user.id ? { ...u, is_active: !u.is_active, updated_at: new Date().toISOString() } : u
    );
    localStorage.setItem("users_data", JSON.stringify(updatedUsers));
    
    // Update displayed users based on role
    if (userRole === "admin_cabang" && currentWarehouseId) {
      const filtered = updatedUsers.filter(
        (u: User) => u.role === "admin_warehouse" && u.warehouse_id === currentWarehouseId
      );
      setUsers(filtered);
    } else {
      setUsers(updatedUsers);
    }
  };

  const handleDeleteUser = (user: User) => {
    setConfirmModal({
      isOpen: true,
      type: "confirm",
      title: "Konfirmasi Hapus",
      message: `Apakah Anda yakin ingin menghapus user ${user.full_name}? Tindakan ini tidak dapat dibatalkan.`,
      onConfirm: () => {
        const allUsers = JSON.parse(localStorage.getItem("users_data") || "[]");
        const updatedUsers = allUsers.filter((u: User) => u.id !== user.id);
        localStorage.setItem("users_data", JSON.stringify(updatedUsers));

        // Update displayed users based on role
        if (userRole === "admin_cabang" && currentWarehouseId) {
          const filtered = updatedUsers.filter(
            (u: User) => u.role === "admin_warehouse" && u.warehouse_id === currentWarehouseId
          );
          setUsers(filtered);
        } else {
          setUsers(updatedUsers);
        }
        
        setConfirmModal({
          isOpen: true,
          type: "success",
          title: "Berhasil!",
          message: `User ${user.full_name} berhasil dihapus.`,
          onConfirm: () => {},
        });
      },
    });
  };

  const openEditModal = (user: User) => {
    setSelectedUser(user);
    setFormData({
      username: user.username,
      full_name: user.full_name,
      email: user.email,
      phone: user.phone,
      password: "", // Don't populate password for security
      role: user.role,
      warehouse_id: user.warehouse_id || "wh-001-cikarang",
    });
    setShowEditModal(true);
  };

  const formatDateTime = (dateStr: string) => {
    const date = new Date(dateStr);
    return date.toLocaleString("id-ID", {
      day: "2-digit",
      month: "short",
      year: "numeric",
      hour: "2-digit",
      minute: "2-digit",
    });
  };

  const getRoleName = (role: string) => {
    switch (role) {
      case "developer": return "Developer";
      case "admin_cabang": return "Admin Cabang";
      case "admin_warehouse": return "Admin Warehouse";
      default: return role;
    }
  };

  if (userRole !== "developer" && userRole !== "admin_cabang") {
    return null;
  }

  const pageTitle = userRole === "developer" ? "Management User" : "Management User - Admin Warehouse";
  const pageSubtitle = userRole === "developer" ? "Kelola semua user di semua gudang" : "Kelola Admin Warehouse di gudang Anda";

  return (
    <>
      <Navigation />
      <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 lg:pl-8 p-4 sm:p-6">
        <div className="w-full max-w-full space-y-3 sm:space-y-4">
          {/* Header */}
          <div className="bg-white rounded-2xl shadow-xl p-4 sm:p-6">
            <div className="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <div className="flex items-center gap-3">
                <div className="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center">
                  <span className="text-xl sm:text-2xl">ðŸ‘¥</span>
                </div>
                <div>
                  <h1 className="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-800">{pageTitle}</h1>
                  <p className="text-xs sm:text-sm text-gray-600">
                    {pageSubtitle}
                  </p>
                </div>
              </div>
              <button
                onClick={() => {
                  resetForm();
                  setShowAddModal(true);
                }}
                className="w-full sm:w-auto px-4 sm:px-6 py-2.5 sm:py-3 text-sm sm:text-base bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl font-semibold hover:from-blue-600 hover:to-indigo-700 transition-all shadow-lg"
              >
                + Tambah {userRole === "developer" ? "User" : "Admin"}
              </button>
            </div>
          </div>

          {/* Stats */}
          <div className="grid grid-cols-3 gap-2 sm:gap-4">
            <div className="bg-white rounded-xl shadow-lg p-3 sm:p-4 lg:p-6">
              <div className="flex flex-col sm:flex-row items-center gap-2 sm:gap-3">
                <div className="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <span className="text-lg sm:text-2xl">ðŸ“Š</span>
                </div>
                <div className="text-center sm:text-left">
                  <p className="text-xs sm:text-sm text-gray-600">Total</p>
                  <p className="text-lg sm:text-2xl font-bold text-gray-800">{users.length}</p>
                </div>
              </div>
            </div>
            <div className="bg-white rounded-xl shadow-lg p-3 sm:p-4 lg:p-6">
              <div className="flex flex-col sm:flex-row items-center gap-2 sm:gap-3">
                <div className="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-lg flex items-center justify-center">
                  <span className="text-lg sm:text-2xl">âœ“</span>
                </div>
                <div className="text-center sm:text-left">
                  <p className="text-xs sm:text-sm text-gray-600">Aktif</p>
                  <p className="text-lg sm:text-2xl font-bold text-green-600">
                    {users.filter(u => u.is_active).length}
                  </p>
                </div>
              </div>
            </div>
            <div className="bg-white rounded-xl shadow-lg p-3 sm:p-4 lg:p-6">
              <div className="flex flex-col sm:flex-row items-center gap-2 sm:gap-3">
                <div className="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-lg flex items-center justify-center">
                  <span className="text-lg sm:text-2xl">âœ—</span>
                </div>
                <div className="text-center sm:text-left">
                  <p className="text-xs sm:text-sm text-gray-600">Nonaktif</p>
                  <p className="text-lg sm:text-2xl font-bold text-red-600">
                    {users.filter(u => !u.is_active).length}
                  </p>
                </div>
              </div>
            </div>
          </div>

          {/* User List */}
          <div className="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div className="overflow-x-auto">
              <table className="w-full">
                <thead className="bg-gradient-to-r from-blue-500 to-indigo-600 text-white">
                  <tr>
                    <th className="px-4 py-3 text-left text-sm font-bold">Username</th>
                    <th className="px-4 py-3 text-left text-sm font-bold">Nama</th>
                    <th className="px-4 py-3 text-left text-sm font-bold hidden sm:table-cell">Email</th>
                    {userRole === "developer" && <th className="px-4 py-3 text-left text-sm font-bold hidden md:table-cell">Role</th>}
                    {userRole === "developer" && <th className="px-4 py-3 text-left text-sm font-bold hidden md:table-cell">Gudang</th>}
                    <th className="px-4 py-3 text-center text-sm font-bold">Status</th>
                    <th className="px-4 py-3 text-center text-sm font-bold">Aksi</th>
                  </tr>
                </thead>
                <tbody className="divide-y divide-gray-200">
                  {users.length === 0 ? (
                    <tr>
                      <td colSpan={userRole === "developer" ? 7 : 5} className="px-4 py-12 text-center">
                        <div className="text-6xl mb-4">ðŸ‘¤</div>
                        <p className="text-gray-600 font-semibold">Belum ada user</p>
                      </td>
                    </tr>
                  ) : (
                    users.map((user) => (
                      <tr key={user.id} className="hover:bg-blue-50 transition-colors">
                        <td className="px-4 py-3 text-sm font-mono font-bold text-gray-800">
                          {user.username}
                        </td>
                        <td className="px-4 py-3 text-sm font-semibold text-gray-800">
                          {user.full_name}
                        </td>
                        <td className="px-4 py-3 text-sm text-gray-600 hidden sm:table-cell">
                          {user.email}
                        </td>
                        {userRole === "developer" && (
                          <td className="px-4 py-3 text-sm text-gray-700 hidden md:table-cell">
                            <span className={`px-2 py-1 rounded-lg text-xs font-bold ${
                              user.role === "developer" ? "bg-purple-100 text-purple-700" :
                              user.role === "admin_cabang" ? "bg-blue-100 text-blue-700" :
                              "bg-green-100 text-green-700"
                            }`}>
                              {getRoleName(user.role)}
                            </span>
                          </td>
                        )}
                        {userRole === "developer" && (
                          <td className="px-4 py-3 text-sm text-gray-700 hidden md:table-cell">
                            {user.warehouse_name}
                          </td>
                        )}
                        <td className="px-4 py-3 text-center">
                          <button
                            onClick={() => handleToggleStatus(user)}
                            className={`px-2 sm:px-3 py-1 rounded-lg text-xs font-bold ${
                              user.is_active
                                ? "bg-green-100 text-green-700"
                                : "bg-red-100 text-red-700"
                            }`}
                          >
                            {user.is_active ? "âœ“ Aktif" : "âœ— Nonaktif"}
                          </button>
                        </td>
                        <td className="px-4 py-3 text-center">
                          <div className="flex items-center justify-center gap-2">
                            <button
                              onClick={() => openEditModal(user)}
                              className="px-2 sm:px-3 py-1.5 bg-blue-600 text-white rounded-lg text-xs font-semibold hover:bg-blue-700 transition-colors"
                            >
                              Edit
                            </button>
                            <button
                              onClick={() => handleDeleteUser(user)}
                              className="px-2 sm:px-3 py-1.5 bg-red-600 text-white rounded-lg text-xs font-semibold hover:bg-red-700 transition-colors"
                            >
                              Hapus
                            </button>
                          </div>
                        </td>
                      </tr>
                    ))
                  )}
                </tbody>
              </table>
            </div>
          </div>
        </div>

        {/* Add/Edit User Modal */}
        {(showAddModal || showEditModal) && (
          <div 
            className="fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4 backdrop-blur-sm overflow-y-auto"
            onClick={() => {
              setShowAddModal(false);
              setShowEditModal(false);
              resetForm();
            }}
          >
            <div
              className="bg-white rounded-2xl shadow-2xl max-w-md w-full my-8 max-h-[90vh] flex flex-col"
              onClick={(e) => e.stopPropagation()}
            >
              {/* Modal Header */}
              <div className="bg-gradient-to-r from-blue-500 to-indigo-600 p-4 sm:p-6 text-white rounded-t-2xl flex-shrink-0">
                <div className="flex items-center justify-between">
                  <div>
                    <h2 className="text-xl sm:text-2xl font-bold">
                      {showEditModal ? "Edit" : "Tambah"} {userRole === "developer" ? "User" : "Admin"}
                    </h2>
                    <p className="text-xs sm:text-sm opacity-90 mt-1">
                      {showEditModal ? "Update data user" : "Buat akun user baru"}
                    </p>
                  </div>
                  <button
                    onClick={() => {
                      setShowAddModal(false);
                      setShowEditModal(false);
                      resetForm();
                    }}
                    className="text-white hover:bg-white/20 rounded-lg p-2 transition-colors"
                  >
                    <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </div>
              </div>

              {/* Modal Body - Scrollable */}
              <div className="p-4 sm:p-6 space-y-4 overflow-y-auto flex-1">
                <div>
                  <label className="block text-sm font-semibold text-gray-700 mb-2">
                    Username <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.username}
                    onChange={(e) => setFormData({ ...formData, username: e.target.value })}
                    placeholder="Masukkan username"
                    className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                  />
                </div>

                <div>
                  <label className="block text-sm font-semibold text-gray-700 mb-2">
                    Nama Lengkap <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.full_name}
                    onChange={(e) => setFormData({ ...formData, full_name: e.target.value })}
                    placeholder="Masukkan nama lengkap"
                    className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                  />
                </div>

                <div>
                  <label className="block text-sm font-semibold text-gray-700 mb-2">
                    Email <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    value={formData.email}
                    onChange={(e) => setFormData({ ...formData, email: e.target.value })}
                    placeholder="Masukkan email"
                    className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                  />
                </div>

                <div>
                  <label className="block text-sm font-semibold text-gray-700 mb-2">
                    Telepon
                  </label>
                  <input
                    type="text"
                    value={formData.phone}
                    onChange={(e) => setFormData({ ...formData, phone: e.target.value })}
                    placeholder="Masukkan nomor telepon"
                    className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                  />
                </div>

                <div>
                  <label className="block text-sm font-semibold text-gray-700 mb-2">
                    Password {showEditModal && <span className="text-xs text-gray-500">(Kosongkan jika tidak ingin mengubah)</span>} {!showEditModal && <span className="text-red-500">*</span>}
                  </label>
                  <input
                    type="password"
                    value={formData.password}
                    onChange={(e) => setFormData({ ...formData, password: e.target.value })}
                    placeholder={showEditModal ? "Kosongkan jika tidak ingin mengubah" : "Masukkan password"}
                    className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                  />
                </div>

                {userRole === "developer" && (
                  <>
                    <div>
                      <label className="block text-sm font-semibold text-gray-700 mb-2">
                        Role <span className="text-red-500">*</span>
                      </label>
                      <select
                        value={formData.role}
                        onChange={(e) => setFormData({ ...formData, role: e.target.value as "admin_warehouse" | "admin_cabang" | "developer" })}
                        className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                      >
                        <option value="admin_warehouse">Admin Warehouse</option>
                        <option value="admin_cabang">Admin Cabang</option>
                        <option value="developer">Developer</option>
                      </select>
                    </div>

                    {formData.role !== "developer" && (
                      <div>
                        <label className="block text-sm font-semibold text-gray-700 mb-2">
                          Gudang <span className="text-red-500">*</span>
                        </label>
                        <select
                          value={formData.warehouse_id}
                          onChange={(e) => setFormData({ ...formData, warehouse_id: e.target.value })}
                          className="w-full px-3 sm:px-4 py-2 sm:py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 transition-colors text-sm sm:text-base"
                        >
                          <option value="wh-001-cikarang">Cikarang</option>
                          <option value="wh-002-bandung">Bandung</option>
                        </select>
                      </div>
                    )}
                  </>
                )}
              </div>

              {/* Modal Footer */}
              <div className="bg-gray-50 p-4 rounded-b-2xl flex gap-3 flex-shrink-0">
                <button
                  onClick={() => {
                    setShowAddModal(false);
                    setShowEditModal(false);
                    resetForm();
                  }}
                  className="flex-1 px-4 sm:px-6 py-2 sm:py-3 bg-gray-200 text-gray-700 rounded-xl font-semibold hover:bg-gray-300 transition-colors text-sm sm:text-base"
                >
                  Batal
                </button>
                <button
                  onClick={showEditModal ? handleEditUser : handleAddUser}
                  className="flex-1 px-4 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl font-semibold hover:from-blue-600 hover:to-indigo-700 transition-colors text-sm sm:text-base"
                >
                  {showEditModal ? "Update" : "Simpan"}
                </button>
              </div>
            </div>
          </div>
        )}

        {/* Confirmation Modal */}
        <ConfirmationModal
          isOpen={confirmModal.isOpen}
          onClose={() => setConfirmModal({ ...confirmModal, isOpen: false })}
          onConfirm={confirmModal.onConfirm}
          title={confirmModal.title}
          message={confirmModal.message}
          type={confirmModal.type}
          confirmText="OK"
          cancelText="Batal"
          showCancel={confirmModal.type === "confirm"}
        />
      </div>
    </>
  );
}
